<%layout("/layouts/boilerplate")%>
<body>
    <!-- <h3>All Listings</h3> -->
    <!-- <form action="/listings/new", method="GET">
        <button>Create new listing </button>
    </form> -->
    <style>
        #filters{
            display: flex;
            align-items: center;
            /* For cross axis alignment */
        }
        #filter{
            text-align: center;
            margin-right: 2rem;
            margin-top: 1.5rem;
            opacity: 0.7;
            /* padding: 0.5rem; */
        }
        #filter:hover{
            opacity: 1;
            /* border: 1px solid black; */
            /* border-radius: 10%; */
            cursor: pointer;
        }
        #filter p{
            font-size: 0.8rem;
        }
        #filter i{
            font-size: 1.3rem;
        }
        .tax-info{
            visibility: hidden;
            /* This property is different from the display none as if it is used space is removed but visibility property occupies space and only gets hidden */
        }
        .tax-switch{
            border : 1px solid black;
            border-radius: 1rem;
            height: 3.25rem;
            padding: 1rem;
            margin-left: 3rem;
            display: flex;
            align-items: center;
        }
        @media screen and (max-width: 1220px) {
        #filters {
            display: none;
        }
    }
    </style>
    <div id="filters"> 
        <div id="filter">
            <div><i class="fa-solid fa-fire"></i></div>
            <p>Trending</p>
        </div>
        <div id="filter">
            <div><i class="fa-solid fa-bed"></i></div>
            <p>Rooms</p>
        </div>
        <div id="filter">
            <div><i class="fa-solid fa-mountain-city"></i></div>
            <p>Iconic cities</p>
        </div>
        <div id="filter">
            <div><i class="fa-solid fa-mountain-sun"></i></div>
            <p>Mountains</p>
        </div>
        <div id="filter">
            <div><i class="fa-brands fa-fort-awesome"></i></div>
            <p>Castles</p>
        </div>
        <div id="filter">
            <div><i class="fa-solid fa-person-swimming"></i></div>
            <p>Amazing pools</p>
        </div>
        <div id="filter">
            <div><i class="fa-solid fa-tents"></i></div>
            <p>Camping</p>
        </div>
        <div id="filter">
            <div><i class="fa-solid fa-wheat-awn"></i></div>
            <p>Farms</p>
        </div>
        <div id="filter">
            <div><i class="fa-solid fa-monument"></i></div>
            <p>Monuments</p>
        </div>
        <div id="filter">
            <div><i class="fa-solid fa-mug-saucer"></i></div>
            <p>Food</p>
        </div>
        <div id="filter">
            <div><i class="fa-solid fa-landmark-dome"></i></div>
            <p>Domes</p>
        </div>
        <div class="tax-switch">
            <div class="form-check-reverse form-switch">
                <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
                <label class="form-check-label" for="flexSwitchCheckDefault">Display total after Taxes</label>
              </div>
        </div>
    </div>
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
        <%for(let listings of allListings){%>
            <a href="/listings/<%=listings._id%>" class="listing-link">
                <div class="card listing-card">
                    <img src="<%=listings.image.url%>" class="card-img-top" alt="Listing Image" style="height: 20rem;">
                    <div class="card-img-overlay"><%=listings.description%></div>
                    <div class="card-body">
                      <p class="card-text"><b><%=listings.title%></b> 
                        <br>
                        &#8377; <%=listings.price.toLocaleString("en-IN")%> / night
                        <i class="tax-info">&nbsp; +18% GST</i>
                    </p>
                    </div>
                  </div>
            </a>
        <%}%>
    </div>
</body>

<script>
    let taxSwitch = document.getElementById("flexSwitchCheckDefault");
    taxSwitch.addEventListener("click", ()=>{
        console.log("clicked");
        let taxInfo = document.getElementsByClassName("tax-info");
        for(info of taxInfo){
            if(info.style.visibility != "visible"){
                info.style.visibility = "visible";
            }else{
                info.style.visibility = "hidden";
            }
        }
    });
</script>




